<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application_mobile.LoginPage">

    <StackLayout Padding="10">
        <Label Text="Nom d'utilisateur :" FontSize="20" />
        <Entry x:Name="entryNomUtilisateur" Placeholder="Entrez votre nom d'utilisateur" FontSize="18" />

        <Label Text="Mot de passe :" FontSize="20" />
        <Entry x:Name="entryMotDePasse" Placeholder="Entrez votre mot de passe" FontSize="18" IsPassword="True" />

        <Button Text="Se connecter" FontSize="20" Clicked="OnConnexionClicked" />
    </StackLayout>

</ContentPage>
